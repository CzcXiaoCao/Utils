<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff242728"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_select_media"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff363738"
        app:tabIndicatorColor="#ff4a90e2"
        app:tabSelectedTextColor="#ff4a90e2"
        app:tabTextColor="#ffffffff">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_select_media"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/media_tv_startEdit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="#ff242728"
        android:gravity="center"
        android:text="开始制作"
        android:textColor="#ff4a90e2"
        android:textSize="16sp"
        android:visibility="gone">
    </TextView>

</LinearLayout>
